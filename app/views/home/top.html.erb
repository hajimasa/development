<h1>FlatEvent</h1>
<button onclick="getPosition();">位置情報を取得する</button>
<div id='map'></div>

<br>近い順に10個<br>
<% @distance_list.each do |distance| %>
  <%= @results["#{distance[0]}"]%><br>
<% end %>

<style>
#map{
  height: 400px;
}
</style>

<script>
  let map;
  let currentLocation;
  function initMap(position){
    let center = position || {lat: 35.658034, lng: 139.701636};
    map = new google.maps.Map(document.getElementById('map'), {
      center: center,
      zoom: 9
    });

    currentLocation = new google.maps.Marker({
      position: position,
      map: map
    });

    let currentInfo = new google.maps.InfoWindow({
      content: '<div class="sample">現在地</div>'
    });
    currentLocation.addListener('click', function() {
      currentInfo.open(map, currentLocation);
    });
  }

  function moveMap(position){
    map.setCenter(position);
    currentLocation.setPosition(position);
  }

  function getPosition() {
    // 現在地を取得
    navigator.geolocation.getCurrentPosition(
      // 取得成功した場合
      function(position) {
        console.log(position)
        var hostUrl= '/ajax/get_my_location_information_data';
        $.ajax({
          url: hostUrl,
          type:'POST',
          dataType: 'json',
          data : position,
          timeout:3000,
        }).done(function(data) {
          alert("ok");
        }).fail(function(XMLHttpRequest, textStatus, errorThrown) {
          alert("error");
        })

      },
      // 取得失敗した場合
      function(error) {
        switch(error.code) {
          case 1: //PERMISSION_DENIED
            alert("位置情報の利用が許可されていません");
            initMap();
            break;
          case 2: //POSITION_UNAVAILABLE
            alert("現在位置が取得できませんでした");
            initMap();
            break;
          case 3: //TIMEOUT
            alert("タイムアウトになりました");
            initMap();
            break;
          default:
            alert("その他のエラー(エラーコード:"+error.code+")");
            initMap();
            break;
        }
      }
    );
  }
</script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDSynXRfRf7YSrXKzqse275Ukr9SUsdhdM&callback=initMap" async defer></script>
